{% extends 'WalvaHafBundle:Auteur:admin.html.twig' %}

{% block breadcrumb %}
{{ parent() }}
<li class="active">Show</li>
{% endblock %}




{% block body -%}
<h1>Auteur</h1>

<table class="table table-striped">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ entity.prenom }}</td>
        </tr>
        <tr>
            <th>Telephone</th>
            <td>{{ entity.telephone }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ entity.titre }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}


{% block container_header_right %}
<div class="btn-group">
    <a class="btn " href="{{ path('auteur') }}">
        <i class="icon-chevron-left"></i> 
        Back to the list
    </a>
    <a class="btn " href="{{ path('auteur_edit', { 'id': entity.id }) }}">
         <i class="icon-pencil"></i> Edit</a>
    </a>
   
</div>
{% endblock %}