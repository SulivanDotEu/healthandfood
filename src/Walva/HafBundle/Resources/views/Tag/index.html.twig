{% extends 'WalvaHafBundle:Tag:admin.html.twig' %}


{% block breadcrumb %}
{{ parent() }}
<li class="active">Tag list</li>
{% endblock %}


{% block body -%}
<h1>Tag list</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Contenufr</th>
            <th>Contenunl</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tag_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.contenuFr }}</td>
                <td>{{ entity.contenuNl }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn" href="{{ path('tag_show', { 'id': entity.id }) }} ">
                            <i class="icon-eye-open"></i> Show</a>
                        <a class="btn" href="{{ path('tag_edit', { 'id': entity.id }) }}">
                            <i class="icon-pencil"></i> Edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}

{% block container_header_right %}
    <a class="btn btn-primary" href="{{ path('tag_new') }}">
        <i class="icon-plus icon-white"></i> 
        Create a new entry
    </a>
{% endblock %}