{% extends 'WalvaHafBundle:Tag:admin.html.twig' %}

{% block body -%}
    <h1>Tag</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Contenu fr</th>
                <td>{{ entity.contenuFr }}</td>
            </tr>
            <tr>
                <th>Contenu nl</th>
                <td>{{ entity.contenuNl }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

    
    
{% block container_header_right %}

<div class="btn-group">
    <a class="btn " href="{{ path('tag') }}">
        <i class="icon-chevron-left"></i> 
        Back to the list
    </a>
    <a class="btn " href="{{ path('tag_edit', { 'id': entity.id }) }}">
         <i class="icon-pencil"></i> Edit</a>
    </a>
   
</div>
{% endblock %}