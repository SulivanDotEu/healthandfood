{% extends  'WalvaCrudAdminBundle:Crud:index.html.twig' %}


{% block crud_table_row_content %}
<td><a href="{{ path(routeShow, { 'id': entity.id }) }}">{{ entity.id }}</a></td>
<td>{{ entity.internalName }}</td>
{% endblock %}


{% block actions %}
<div class="btn-group">
    <a href="{{ path(routeShow, { 'id': entity.id }) }}" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-new-window"></span> Show</a>
    <a href="{{ path(routeEdit, { 'id': entity.id }) }}" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
</div>
{% endblock %}

    {% block crud_add_button %}
<div class="pull-right">

    <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            <span class="glyphicon glyphicon-plus"></span> Create a new entry <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li><a href="{{ path('internalvideo_new') }}">Internal Video</a></li>
            <li class="disabled"><a href="#">Youtube Video</a></li>
            <li class="disabled"><a href="#">Daylimotion Video</a></li>
        </ul>
    </div>
</div>

<div class="pull-left">
        <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            <span class="glyphicon glyphicon-list"></span> List by type <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li><a href="{{ path('internalvideo') }}">Internal Video</a></li>
            <li class="disabled"><a href="#">Youtube Video</a></li>
            <li class="disabled"><a href="#">Daylimotion Video</a></li>
        </ul>
    </div>
</div>
{% endblock %}
